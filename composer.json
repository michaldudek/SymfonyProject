{
    "name": "michaldudek/symfony-project",
    "description": "Project skeleton for Symfony2 in MD flavour.",
    "license": "MIT",
    "type": "project",
    "authors": [
        {
            "name": "Michał Pałys-Dudek",
            "email": "michal@michaldudek.pl"
        }
    ],
    "require": {
        "php": ">=5.5",
        "symfony/symfony": "2.7.*",
        "symfony/monolog-bundle": "~2.4",
        "sensio/distribution-bundle": "~4.0",
        "doctrine/orm": "^2.4.8",
        "doctrine/doctrine-bundle": "~1.4",

        "michaldudek/foundation": ">=0.9,<2.0",
        "willdurand/negotiation": "1.3.*"
    },
    "require-dev": {
        "phpunit/phpunit": "~4.8",
        "squizlabs/php_codesniffer": "~2.3",
        "phpmd/phpmd" : "~2.2"
    },
    "scripts": {
        "post-install-cmd": [
            "MD\\Flavour\\Composer\\ScriptHandler::clearCache",
            "MD\\Flavour\\Composer\\ScriptHandler::installAssets"
        ],
        "post-update-cmd": [
            "MD\\Flavour\\Composer\\ScriptHandler::clearCache",
            "MD\\Flavour\\Composer\\ScriptHandler::installAssets"
        ]
    },
    "autoload": {
        "psr-0": {
            "": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests"
        }
    },
    "extra": {
        "symfony-app-dir": ".cache",
        "symfony-web-dir": "web",
        "symfony-assets-install": "relative"
    }
}
